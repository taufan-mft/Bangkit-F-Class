<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".backgroundprocess.BackgroundProcessActivity">

    <TextView
        android:id="@+id/tv_background_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Bangkit F Class" />

    <Button
        android:id="@+id/btn_background_process_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/run_background_task_handler_label" />

    <Button
        android:id="@+id/btn_background_process_coroutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/run_background_task_coroutine_label" />

</LinearLayout>