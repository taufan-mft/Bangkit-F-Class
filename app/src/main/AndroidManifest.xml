<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muhammadfurqan.bangkitfclass">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BangkitFClass">
        <activity android:name=".content_provider.ContentProviderActivity" />
        <activity android:name=".sqlite.SQLiteActivity" />
        <activity android:name=".shared_preferences.SharedPreferencesActivity" />
        <activity android:name=".network.NetworkActivity" />
        <activity android:name=".backgroundprocess.BackgroundProcessActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".list.ListActivity" />
        <activity android:name=".list.DetailActivity" />
        <activity android:name=".fragment.FragmentActivity" />
    </application>

</manifest>